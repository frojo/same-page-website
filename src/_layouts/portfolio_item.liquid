---
layout: page
---

<div class="portfolio-item">
  <div class="portfolio-item-video-details">
    <div class="portfolio-item-video">
          {{ video_embed.code }}
    </div>
    <div class="portfolio-item-details">
        <div class="portfolio-item-credits">
          {%- for credit in credits -%}
            {% comment %} <div class="portfolio-item-credits-entry"> {% endcomment %}
              <div class="portfolio-item-credits-role">{{credit.credit.role}}</div>

              <div class="portfolio-item-credits-names">
                {% if credit.credit.name %}  {% comment %} single name {% endcomment %}
                  <div class="portfolio-item-credits-name">{{credit.credit.name}}</div>
                {%  else  %} {% comment %} multiple names {% endcomment %}
                  {%- for name in credit.credit.names -%}
                    <div class="portfolio-item-credits-name">{{name.name}}</div>
                  {% endfor %}
              {% endif %}
              </div>

            {% comment %} </div> {% endcomment %}
          {%- endfor -%}
        </div>
        <div class="portfolio-item-details-text">
            <div class="portfolio-item-title">{{ my_title }}</div>
            <div class="portfolio-item-description">{{ description | newline_to_br }}</div>
        </div>
    </div>
  </div>


    <div class="portfolio-item-still-grid">
          {%- for still in stills -%}
               <img class="portfolio-item-still"
                    src="{{ still }}"
               />
          {%- endfor -%}

    </div>

</div>

